<struts-config>
	<form-beans>
		<form-bean name="dynamicForm" type="com.cnpc.jcdp.mvc.action.DynaActionForm" />
	</form-beans>
	<action-mappings>
		
		<action path="/hr_login" type="com.cnpc.jcdp.web.auth2.action.LoginAction"
			scope="request">
			<serviceCall serviceName="IBPLoginAndMenuTree"
				operationName="updateUserLogin" />
			<forward name="success" path="/index1.jsp" />
			<forward name="businessEx" path="/login.jsp" />
			<forward name="failed" path="/login.jsp" />
		</action>
	
		<!-- 加载顶部页面 -->
	    <action path="/common/index/header"
	    		type="com.cnpc.jcdp.mvc.action.WSAction">
	      <serviceCall serviceName="IBPLoginAndMenuTree" 
	      		       operationName="query4ChildrenMenus"/>
	      <forward name="success" path="/skin/cute/header_info.jsp" />
	    </action>
	       <action path="/common/index/dmsMenu"
	    		type="com.cnpc.jcdp.mvc.action.WSAction">
	      <serviceCall serviceName="IBPLoginAndMenuTree" 
	      		       operationName="query4ChildrenMenus"/>
	      <forward name="success" path="/dms_info/leftMenu.jsp" />
	    </action>
	    
