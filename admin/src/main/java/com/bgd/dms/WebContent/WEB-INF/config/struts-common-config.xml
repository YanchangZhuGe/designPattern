		<action path="/common/auth/user/addOrUpdateUser"
			type="com.cnpc.jcdp.web.auth.action.AddOrUpdateUserAction" scope="request">
			<serviceCall serviceName="RADCommCRUD" operationName="addOrUpdateEntity" />
		</action>

		<action path="/common/excel/listToExcel" type="com.bgp.mcs.web.common.action.ListToExcelAction"
			scope="request">
		</action>
		<!-- 大量数据导出用 多sheet页-->
		<action path="/common/excel/listToExcelNew" type="com.bgp.mcs.web.common.action.ListToExcelActionNew"
			scope="request">
		</action>

		<!-- excel导入导出 -->
		<action path="/common/excel/fileDownload" type="com.cnpc.jcdp.mvc.action.jcdp.WSDownloadAction"
			scope="request">
			<serviceCall serviceName="TsExcelExportImportSrv"
				operationName="exportExcelData" />
		</action>
		<action path="/common/excel/fileTemplateDownload" type="com.cnpc.jcdp.mvc.action.jcdp.WSDownloadAction"
			scope="request">
			<serviceCall serviceName="TsExcelExportImportSrv"
				operationName="exportExcelTemplate" />
		</action>
		<action path="/common/excel/fileTemplateImport" type="com.cnpc.jcdp.mvc.action.jcdp.WSUploadAction"
			scope="request" name="dynamicForm">
			<serviceCall serviceName="TsExcelExportImportSrv"
				operationName="importExcelTemplate" />
			<forward name="success" path="/common/ExcelImportFile.jsp" />
		</action>
		<!--备注信息操作-->
		<action path="/common/remark/relatedOperation" type="com.cnpc.jcdp.mvc.action.WSAction"
			scope="request">
			<serviceCall serviceName="CommonRemarkSrv" operationName="remarkOperation" />
			<forward name="success" path="/common/common_remark.jsp" />
		</action>
		<!--通知公告-->
		<action path="/common/notice/noticeEdit" type="com.cnpc.jcdp.mvc.action.jcdp.WSUploadAction"
			scope="request"  name="dynamicForm">>
			<serviceCall serviceName="DevInsSrv" operationName="noticeEdit" />
			<forward name="success"	path="/common/close_page.jsp" redirect="false" />
		</action>
	</action-mappings>
