<?xml version="1.0" encoding="UTF-8"?>
<struts-config>
	<form-beans>
		<form-bean name="dynamicForm" type="com.cnpc.jcdp.mvc.action.DynaActionForm" />
	</form-beans>
	
	<action-mappings>
		<!-- 获取所有的风险 -->
	    <action path="/risk/getRiskBasics" type="com.bgp.mcs.web.pm.p6.resource.resourceAssignment.GetTaskAction"
			scope="request">
			<serviceCall serviceName="riskSrv"
				operationName="getRiskBasics" />
		</action>
		<!-- 获取某条风险的信息 -->
		<action path="/risk/getRiskInfo" type="com.cnpc.jcdp.mvc.action.WSAction">
			<serviceCall serviceName="riskSrv" operationName="getRiskInfo"/>
			<forward name="success" path="/risk/multiproject/evaluate_basic.jsp"/>
		</action>
		
		<!-- 新增风险 -->
		<action path="/risk/addRisk" type="com.cnpc.jcdp.mvc.action.WSAction">
			<serviceCall serviceName="riskSrv" operationName="addRisk"/>
			<forward name="success" path="/risk/multiproject/evaluate_close_page.jsp"/>
		</action>
		
		<!-- 编辑风险 -->
		<action path="/risk/editRisk" type="com.cnpc.jcdp.mvc.action.WSAction">
			<serviceCall serviceName="riskSrv" operationName="editRisk"/>
			<forward name="success" path="/risk/multiproject/evaluate_close_page.jsp"/>
		</action>
		
		<!--  -->
		<action path="/risk/saveRiskOrder" type="com.cnpc.jcdp.mvc.action.WSAction">
			<serviceCall serviceName="riskSrv" operationName="saveRiskOrder"/>
		</action>
		
		<!-- 获取所有的风险识别 -->
		<action path="/risk/getAllRiskIdentify" type="com.cnpc.jcdp.mvc.action.WSAction">
			<serviceCall serviceName="riskSrv" operationName="getAllRiskIdentify"/>
			<forward name="success" path="/risk/singleproject/riskIdentify/risk_identify_list.jsp"/>
		</action>
		
		<!-- 新增风险识别 -->
		<action path="/risk/addRiskIdentify" type="com.cnpc.jcdp.mvc.action.WSAction">
			<serviceCall serviceName="riskSrv" operationName="addRiskIdentify"/>
			<forward name="success" path="/risk/singleproject/riskIdentify/identify_close_page.jsp"/>
		</action>
		
		<!-- 修改风险识别 -->
		<action path="/risk/editRiskIdentify" type="com.cnpc.jcdp.mvc.action.WSAction">
			<serviceCall serviceName="riskSrv" operationName="editRiskIdentify"/>
			<forward name="success" path="/risk/singleproject/riskIdentify/identify_close_page.jsp"/>
		</action>
		
		<!-- 风险识别增加处理措施-->
		<action path="/risk/addRiskMeasure" type="com.cnpc.jcdp.mvc.action.WSAction">
			<serviceCall serviceName="riskSrv" operationName="addRiskMeasure"/>
			<forward name="success" path="/risk/singleproject/riskIdentify/risk_identify_list.jsp"/>
		</action>
		
		<!-- 确认的风险增加处理措施-->
		<action path="/risk/addConfirmRiskMeasure" type="com.cnpc.jcdp.mvc.action.WSAction">
			<serviceCall serviceName="riskSrv" operationName="addRiskMeasure"/>
			<forward name="success" path="/risk/singleproject/riskControl/risk_control_list.jsp"/>
		</action>
		
		<!-- 检查风险分类是否存在-->
		<action path="/risk/checkTypeRootExist" type="com.cnpc.jcdp.mvc.action.WSAction">
			<serviceCall serviceName="riskSrv" operationName="checkTypeRootExist"/>
			<forward name="success" path="/risk/setting/riskTypeMng/risk_type_list.jsp"/>
		</action>
		
		<!-- 获取所有的风险目标 -->
		<action path="/risk/getAllRiskTargets" type="com.cnpc.jcdp.mvc.action.WSAction">
			<serviceCall serviceName="riskSrv" operationName="getAllRiskTargets"/>
			<forward name="success" path="/risk/singleproject/riskTarget/risk_target_list.jsp"/>
		</action>
		
		<!-- 新增风险目标 -->
		<action path="/risk/addRiskTarget" type="com.cnpc.jcdp.mvc.action.WSAction">
			<serviceCall serviceName="riskSrv" operationName="addRiskTarget"/>
			<forward name="success" path="/risk/singleproject/riskTarget/target_close_page.jsp"/>
		</action>
		
		<!-- 修改风险目标 -->
		<action path="/risk/editRiskTarget" type="com.cnpc.jcdp.mvc.action.WSAction">
			<serviceCall serviceName="riskSrv" operationName="editRiskTarget"/>
			<forward name="success" path="/risk/singleproject/riskTarget/target_close_page.jsp"/>
		</action>
		
		<!-- 获取所有的应急管理 -->
		<action path="/risk/getAllRiskTargets" type="com.cnpc.jcdp.mvc.action.WSAction">
			<serviceCall serviceName="riskSrv" operationName="getAllRiskTargets"/>
			<forward name="success" path="/risk/singleproject/emergencyMng/emergency_mng_list.jsp"/>
		</action>
		
		<!-- 新增应急管理 -->
		<action path="/risk/addRiskEmergency" type="com.cnpc.jcdp.mvc.action.WSAction">
			<serviceCall serviceName="riskSrv" operationName="addRiskEmergency"/>
			<forward name="success" path="/risk/singleproject/emergencyMng/emergency_close_page.jsp"/>
		</action>
		
		<!-- 修改应急管理 -->
		<action path="/risk/editRiskEmergency" type="com.cnpc.jcdp.mvc.action.WSAction">
			<serviceCall serviceName="riskSrv" operationName="editRiskEmergency"/>
			<forward name="success" path="/risk/singleproject/emergencyMng/emergency_close_page.jsp"/>
		</action>		
		
		<!-- 增加应急措施-->
		<action path="/risk/addEmergencyMeasure" type="com.cnpc.jcdp.mvc.action.WSAction">
			<serviceCall serviceName="riskSrv" operationName="addEmergencyMeasure"/>
			<forward name="success" path="/risk/singleproject/emergencyMng/emergency_mng_list.jsp"/>
		</action>
		
		<!-- 多项目新增风险识别 -->
		<action path="/risk/addMulRiskIdentify" type="com.cnpc.jcdp.mvc.action.WSAction">
			<serviceCall serviceName="riskSrv" operationName="addRiskIdentify"/>
			<forward name="success" path="/risk/multiproject/mRiskIdentify/midentify_close_page.jsp"/>
		</action>
		
		<!-- 多项目修改风险识别 -->
		<action path="/risk/editMulRiskIdentify" type="com.cnpc.jcdp.mvc.action.WSAction">
			<serviceCall serviceName="riskSrv" operationName="editRiskIdentify"/>
			<forward name="success" path="/risk/multiproject/mRiskIdentify/midentify_close_page.jsp"/>
		</action>
		
		<!-- 多项目风险识别增加处理措施-->
		<action path="/risk/addMulRiskMeasure" type="com.cnpc.jcdp.mvc.action.WSAction">
			<serviceCall serviceName="riskSrv" operationName="addRiskMeasure"/>
			<forward name="success" path="/risk/multiproject/mRiskIdentify/mrisk_identify_list.jsp"/>
		</action>
		
		<!-- 获取所有的风险库 -->
		<action path="/risk/getAllRiskBase" type="com.cnpc.jcdp.mvc.action.WSAction">
			<serviceCall serviceName="riskSrv" operationName="getAllRiskBase"/>
			<forward name="success" path="/risk/multiproject/mriskBase/risk_base_list.jsp"/>
		</action>
		
		<!-- 新增风险库 -->
		<action path="/risk/addRiskBase" type="com.cnpc.jcdp.mvc.action.WSAction">
			<serviceCall serviceName="riskSrv" operationName="addRiskBase"/>
			<forward name="success" path="/risk/multiproject/mriskBase/base_close_page.jsp"/>
		</action>
		
		<!-- 修改风险库 -->
		<action path="/risk/editRiskBase" type="com.cnpc.jcdp.mvc.action.WSAction">
			<serviceCall serviceName="riskSrv" operationName="editRiskBase"/>
			<forward name="success" path="/risk/multiproject/mriskBase/base_close_page.jsp"/>
		</action>
		
		<!-- 新增应急管理 -->
		<action path="/risk/addEventRisks" type="com.cnpc.jcdp.mvc.action.WSAction">
			<serviceCall serviceName="riskSrv" operationName="addEventRisks"/>
			<forward name="success" path="risk/singleproject/riskEvent/add_risk_close.jsp"/>
		</action>
		
		<!-- 新增风险控制 -->
		<action path="/risk/addRiskSupervise" type="com.cnpc.jcdp.mvc.action.WSAction">
			<serviceCall serviceName="riskSrv" operationName="addRiskSupervise"/>
			<forward name="success" path="/risk/multiproject/mriskSupervise/supervise_close_page.jsp"/>
		</action>
		
		<!-- 修改风险控制 -->
		<action path="/risk/editRiskSupervise" type="com.cnpc.jcdp.mvc.action.WSAction">
			<serviceCall serviceName="riskSrv" operationName="editRiskSupervise"/>
			<forward name="success" path="/risk/multiproject/mriskSupervise/supervise_close_page.jsp"/>
		</action>
	</action-mappings>
</struts-config>
